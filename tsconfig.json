{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"allowJs": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types"],
		"sourceMap": false,
		"outDir": "dist",
		"strict": true,
		"lib": ["esnext"],
		"baseUrl": "./",
		"paths": {
			"src": ["./src"]
		},
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "Node",
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"src/__tests__/**/*",
		"process-env.d.ts",
		".eslintrc.cjs",
		"jest.config.js"
	],
	"exclude": ["node_modules"]
}
