{
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": false,
		"target": "es6",
		"sourceMap": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"module": "commonjs",
		"alwaysStrict": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"src": ["./src"]
		}
	},
	"include": ["./src/**/*", "process-env.d.ts"],
	"exclude": ["node_modules"]
}
