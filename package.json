{
	"name": "social-media-dev-api",
	"version": "1.0.0",
	"description": "Use this API for playing with frontend features that needs a mock REST API",
	"main": "index.js",
	"type": "module",
	"packageManager": "pnpm@8.15.5",
	"scripts": {
		"dev": "tsx watch ./src/index.ts | pino-pretty",
		"start": "tsx ./src/index.ts",
		"test": "jest --watch",
		"test:unit:v1": "jest --watch --testPathPattern=src/v1/__tests__/unit",
		"test:e2e:v1": "jest --watch --testPathPattern=src/v1/__tests__/e2e",
		"test:unit:v1:ci": "jest --ci --testPathPattern=src/v1/__tests__/unit",
		"test:e2e:v1:ci": "jest --ci --testPathPattern=src/v1/__tests__/e2e",
		"test:coverage": "jest --coverage",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"changelog:override": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
		"lint": "tsc -noEmit && eslint ."
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@flydotio/dockerfile": "^0.5.4",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": ">=7.0.2",
		"@typescript-eslint/parser": ">=7.0.2",
		"conventional-changelog-cli": "^4.1.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-xo": "^0.44.0",
		"eslint-config-xo-typescript": "^4.0.0",
		"jest": "^29.7.0",
		"pino-pretty": "^10.3.1",
		"supertest": "^6.3.4",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.2"
	},
	"dependencies": {
		"@faker-js/faker": "^8.4.1",
		"@hapi/boom": "^10.0.1",
		"@hapi/hapi": "^21.3.6",
		"@hapi/inert": "^7.1.0",
		"@hapi/vision": "^7.0.3",
		"dotenv": "^16.4.5",
		"hapi-auth-jwt2": "^10.5.1",
		"hapi-pino": "^12.1.0",
		"hapi-swagger": "17.2.1",
		"joi": "^17.12.2",
		"jsonwebtoken": "^9.0.2",
		"tsx": "^4.15.2"
	}
}
